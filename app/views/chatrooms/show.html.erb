<div class="container">
  <div class="chatroom">
    <h1>#<%= @chatroom.name %></h1>
    <div>
      <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
        <% @chatroom.chatroom_messages.each do |message| %>
          <%= render "chatroom_message", message: message %>
        <% end %>
      </div>
      <%#= simple_form_for [ @chatroom, @message ] do |f| %>
        <%#= f.input :content, label: false, placeholder: "Message ##{@chatroom.name}" %>
        <%# end %>
      </div>
      <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
        <%= f.input :content, label: false, autofocus: true, placeholder: "Message ##{@chatroom.name}" %>
      <% end %>
    </div>
  </div>
